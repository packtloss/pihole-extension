{
	"manifest_version": 2,
	"name": "Pi-Hole List Editor",
	"description": "Add/Remove/View whitelist and blacklist entries on your PiHole. Requires Extension API Script and some configuration.",
	"version": "1.0",
	"options_ui": {
    	"page": "options.html",
    	"chrome_style": false
  	},
	"permissions": [
	    "http://*/admin/*",
		"tabs",
		"storage"
	],
	"icons": { 
		"16": "img/pihole16.png",
		"48": "img/pihole48.png",
		"128": "img/pihole128.png" 
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/pihole48.png",          
			"38": "img/pihole48.png"          
		},
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/pihole128.png"
	]
}